<config>
    <sections>
        <shipping>
            <groups>
                <option>
                    <fields>
                        <countriesWithLimitedInvoiceAmounts translate="label" module="maxinvoiceamount">
                            <label>Countries with limited invoice amounts</label>
                            <comment>This limits will be applied to invoices and shipments with a shipping address of this countries. On each line you can enter a country (2-chars country code) followed by a colon and the amount (in your base currency). Example: "CH:1000"</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </countriesWithLimitedInvoiceAmounts>
                    </fields>
                </option>
            </groups>
        </shipping>
    </sections>
</config>
